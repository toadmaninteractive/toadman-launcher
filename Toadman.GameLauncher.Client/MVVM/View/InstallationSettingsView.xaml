<Window x:Class="Toadman.GameLauncher.Client.InstallationSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toadman.GameLauncher.Client"
        mc:Ignorable="d"
        xmlns:metroControls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Installation Settings" 
        WindowStyle="None"
        Icon="../../Resources/icons/ToadmanIcon48.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Height="450" 
        Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/ToadmanLauncher;component/Resources/loginBG.png"/>
    </Window.Background>
    <Grid Margin="20">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Button
            Content="Select folder"
            HorizontalAlignment="Right"
            Style="{DynamicResource BlueButtonStyle}"
            Width="110"
            Click="SelectFolderHandler" />

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal" HorizontalAlignment="Right">
            <Button
                Style="{DynamicResource BlueButtonStyle}"
                IsDefault="True"
                Content="Ok"
                Margin="10,0"
                Width="85"/>
            <Button
                Style="{DynamicResource BlueButtonStyle}"
                Click="OkHandler"
                IsCancel="True"
                Content="Cancel"
                Width="85"/>
        </StackPanel>
    </Grid>
</Window>
