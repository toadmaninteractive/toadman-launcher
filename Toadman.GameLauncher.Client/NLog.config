<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">

  <targets>
    <target xsi:type="File" name="file" fileName="${specialfolder:folder=LocalApplicationData}/ToadmanLauncher/ToadmanLauncher.log"
            layout="${longdate}   ${level:uppercase=true}   ${callsite:fileName=true}  -  ${message:withException=True}"
            maxArchiveFiles="20"
            archiveOldFileOnStartup="true"
            deleteOldFileOnStartup="false" />

    <target xsi:type="MethodCall" name="m" className="Toadman.GameLauncher.Client.Utils, ToadmanLauncher" methodName="LogToChronos">
      <parameter layout="${level}" />
      <parameter layout="${message}" />
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
    <logger name="*" minlevel="Trace" writeTo="m" />
  </rules>
</nlog>
