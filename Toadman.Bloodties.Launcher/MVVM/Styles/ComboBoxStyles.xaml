<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Toadman.Bloodties.Launcher">
    <Style x:Key="LanguageComboBox" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MetroComboBox}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="#FF9B9E9D" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani" />
    </Style>

    <Style x:Key="BaseComboBoxItem" TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource MetroComboBoxItem}">
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani" />
        <Setter Property="Foreground" Value="#FF9B9E9D" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="SettingsComboBox" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MetroComboBox}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="#FF3E3E3E" />
        <Setter Property="Background" Value="#FFA8A8A8" />
        <Setter Property="BorderBrush" Value="#FF858585" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="170" />
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani" />
    </Style>

    <Style x:Key="SettingsComboBoxItem" TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource BaseComboBoxItem}">
        <Setter Property="Foreground" Value="#FF3E3E3E" />
    </Style>
</ResourceDictionary>