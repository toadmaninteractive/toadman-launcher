<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Toadman.Bloodties.Launcher">
    <Style x:Key="Title" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani Bold"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="Ivory"/>
    </Style>

    <Style x:Key="Text" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani Medium"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="Ivory"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <Style x:Key="ListText" TargetType="{x:Type List}">
        <Setter Property="FontFamily" Value="/BloodtiesLauncher;component/Resources/Fonts/#Rajdhani Medium"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="Ivory"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
</ResourceDictionary>